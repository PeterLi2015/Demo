@using PagedList;
@using XDropsWater.Model;
@using PagedList.Mvc;
@using System.Web.Mvc;
@using System.Web.Handlers;
@using XDropsWater.Web.Utility;
@model IPagedList<Member503020>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>手机号码</th>
            <th>姓名</th>
            <th>级别</th>
            <th>50数量</th>
            <th>30数量</th>
            <th>20数量</th>
            <th>总额</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mobile</td>
                <td>@item.MemberName</td>
                <td>@item.RoleName</td>
                <td>@item.Count50</td>
                <td>@item.Count30</td>
                <td>@item.Count20</td>
                <td>@item.Total</td>
                <td>
                    <button class="btn btn-primary" memberId="@item.ID" memberName="@item.MemberName" detailsType="50" data-toggle="modal" data-target="#detailsModal">50明细</button>
                    <button class="btn btn-success" memberId="@item.ID" memberName="@item.MemberName" detailsType="30" data-toggle="modal" data-target="#detailsModal">30明细</button>
                    <button class="btn btn-warning" memberId="@item.ID" memberName="@item.MemberName" detailsType="20" data-toggle="modal" data-target="#detailsModal">20明细</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="page" style="margin-left: 10px">
    第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页
    共 @Model.PageCount 页

    @Html.PagedListPager(Model, page => Url.Action("Member503020", new { page }), new PagedListRenderOptions { LinkToFirstPageFormat = "第一页", LinkToPreviousPageFormat = "上一页", LinkToNextPageFormat = "下一页", LinkToLastPageFormat = "最后一页", MaximumPageNumbersToDisplay = 7 })
</div>
