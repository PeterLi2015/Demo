@using PagedList;
@using XDropsWater.Model;
@using PagedList.Mvc;
@using System.Web.Mvc;
@using System.Web.Handlers;
@using XDropsWater.Web.Utility;
@model IPagedList<DetailsModel>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>手机号码</th>
            <th>姓名</th>
            <th>级别</th>
            <th>订货数量</th>
            <th>时间</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mobile</td>
                <td>@item.MemberName</td>
                <td>@item.RoleName</td>
                <td>@item.Quantity</td>
                <td>@item.CreateOn</td>
            </tr>
        }
    </tbody>
</table>
<div id="page" style="margin-left: 10px">
    第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页
    共 @Model.PageCount 页

    @Html.PagedListPager(Model, page => Url.Action("Details503020", new { page }), new PagedListRenderOptions { LinkToFirstPageFormat = "第一页", LinkToPreviousPageFormat = "上一页", LinkToNextPageFormat = "下一页", LinkToLastPageFormat = "最后一页", MaximumPageNumbersToDisplay = 7 })
</div>
    <input type="hidden" id="hdSum" value="@ViewBag.Sum" />
    <input type="hidden" id="hdMemberCount" value="@ViewBag.MemberCount" />
    
